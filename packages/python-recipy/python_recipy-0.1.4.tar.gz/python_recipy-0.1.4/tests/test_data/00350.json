    "recipeIngredient": [
        "0.5 cup butter, softened",
        "0.5 cup almond butter",
        "0.5 cup white sugar",
        "0.5 cup packed brown sugar",
        "0.75 teaspoon baking soda",
        "0.5 teaspoon cream of tartar",
        "0.25 teaspoon salt",
        "1 egg",
        "2 tablespoons milk",
        "0.5 teaspoon vanilla extract",
        "1 cup whole wheat flour",
        "1 cup all-purpose flour",
        "3 tablespoons white sugar",
        "2 tablespoons ground almonds",
        "48 milk chocolate candy kisses with almond, or as needed"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Preheat oven to 350 degrees F (175 degrees C)."
        },
        {
            "@type": "HowToStep",
            "text": "Beat butter and almond butter in a large mixing bowl with an electric mixer on medium-high speed until creamy, about 30 seconds. Beat in 1/2 cup sugar, brown sugar, baking soda, cream of tartar, and salt until thoroughly combined. Beat egg, milk, and vanilla extract into moist ingredients."
        },
        {
            "@type": "HowToStep",
            "text": "Beat whole wheat flour and as much of the all-purpose flour as the mixer can handle; stir remaining flour into dough."
        },
        {
            "@type": "HowToStep",
            "text": "Combine 3 tablespoons sugar with ground almonds in a shallow bowl. Pinch off dough and roll into 1-inch balls; roll balls in almond-sugar mixture. Place cookies 2 inches apart on ungreased baking sheets."
        },
        {
            "@type": "HowToStep",
            "text": "Bake in the preheated oven until edges are firm and tops are cracked, 8 to 10 minutes. Immediately press a chocolate almond kiss into middle of each cookie; let cool."
        }
    ],
