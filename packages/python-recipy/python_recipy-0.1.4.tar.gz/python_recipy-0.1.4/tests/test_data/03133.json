    "headline": "Daiquiri",
    "name": "Daiquiri",
    "recipeIngredient": [
        "2 ounces white rum",
        "¾ ounce fresh lime juice",
        "¾ ounce simple syrup",
        "Lime twist (for serving)"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Combine rum, lime juice, and simple syrup in a cocktail shaker. Fill shaker with ice, cover, and shake vigorously until outside of shaker is very cold, about 20 seconds."
        },
        {
            "@type": "HowToStep",
            "text": "Strain cocktail through a Hawthorne strainer or a slotted spoon into a coupe glass. Garnish with lime twist."
        }
    ],
