    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "name": "Step 1",
            "text": "Mix the cocktail: Place the bourbon, simple syrup, and Angostura bitters in a mixing glass. Add the ice and stir with a bar spoon for 10 to 15 seconds.",
            "image": "https://cdn.apartmenttherapy.info/image/upload/f_auto,q_auto:eco,c_fill,g_auto,w_1690,h_1127/k%2Farchive%2F272b785da074cb8d52ec6ef32e483eb88e65c442"
        },
        {
            "@type": "HowToStep",
            "name": "Step 2",
            "text": "Strain the cocktail: Strain the cocktail into a rocks glass over one large ice cube, or cubed ice.",
            "image": "https://cdn.apartmenttherapy.info/image/upload/f_auto,q_auto:eco,c_fill,g_auto,w_1690,h_1127/k%2Farchive%2F9ceb59d88e5b91ed20ead03a8380aa4eddd51f8e"
        },
        {
            "@type": "HowToStep",
            "name": "Step 3",
            "text": "Garnish the cocktail: Pare an orange peel and express the oils from the back of the peel over the old fashioned. Rub the peel around the rim of the glass and drop the peel into the glass.",
            "image": "https://cdn.apartmenttherapy.info/image/upload/f_auto,q_auto:eco,c_fill,g_auto,w_1690,h_1127/k%2Farchive%2Fe529b0f07d0daee96585e20f32f35e1ec87f3e69"
        }
