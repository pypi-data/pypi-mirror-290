    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "For the vinaigrette: Pulse the cocoa nibs in a spice grinder 4 or 5 times, until finely ground."
        },
        {
            "@type": "HowToStep",
            "text": "Combine the ground cocoa nibs and the olive oil in a 1-quart saucepan, and heat on low for 2 to 3 minutes, until warm and fragrant. Turn off the heat."
        },
        {
            "@type": "HowToStep",
            "text": "Add the vinegar, shallot, salt and red pepper flakes and let sit for about 25 minutes."
        },
        {
            "@type": "HowToStep",
            "text": "Transfer to a jar, twist on the lid and shake like crazy."
        },
        {
            "@type": "HowToStep",
            "text": "Toss lettuce with vinaigrette to taste. Divide dressed lettuce between 2 serving dishes. Arrange remaining salad ingredients over the lettuce. Serve with any remaining vinaigrette on the side."
        }
    ],
