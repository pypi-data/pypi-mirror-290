    "name": "Cilantro-Lime Crema",
    "keywords": "cilantro lime crema, cilantro lime sauce",
    "recipeCategory": [],
    "recipeCuisine": [
        "Mexican"
    ],
    "recipeIngredient": [
        "1/2 cup sour cream",
        "1/4 cup chopped fresh cilantro",
        "2 tablespoons mayonnaise",
        "1 teaspoon lime zest, plus 1 Tbsp. fresh juice (from 1 lime)",
        "1/4 teaspoon kosher salt"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.southernliving.com/thmb/PNTlPyhbIfyaoBmQsK1VRsiBZrI=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/Cilantro_Lime_Crema_003-2a1d410d59ca4e2ab6095ea633869bf9.jpg"
                }
            ],
            "text": "Combine ingredients: In a medium bowl, stir to combine sour cream, cilantro, mayonnaise, lime zest, juice, and salt."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.southernliving.com/thmb/TKPGlDEJ9lgikWjq5a12lYYZhII=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/Cilantro_Lime_Crema_006-49663ca3333d41778733704e547e20ce.jpg"
                }
            ],
            "text": "Chill crema: Cover and chill at least 15 minutes or until ready to serve. Refrigerate in an airtight container up to 2 days."
        }
    ],
