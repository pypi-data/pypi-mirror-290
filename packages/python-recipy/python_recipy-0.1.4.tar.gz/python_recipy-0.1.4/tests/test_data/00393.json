    "recipeIngredient": [
        "2 cups semisweet chocolate chips",
        "1 cup butter",
        "4 cups confectioners' sugar",
        "2.6666667461395 cups evaporated milk",
        "1 teaspoon vanilla extract",
        "0.125 teaspoon salt"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "In a large saucepan, combine chocolate chips and butter. Cook and stir over low heat until melted."
        },
        {
            "@type": "HowToStep",
            "text": "Gradually mix in confectioners&#39; sugar and milk. Increase heat to a boil. Cook, stirring constantly, for 8 minutes."
        },
        {
            "@type": "HowToStep",
            "text": "Remove from heat, then stir in vanilla and salt. Serve warm. Store in refrigerator."
        }
    ],
