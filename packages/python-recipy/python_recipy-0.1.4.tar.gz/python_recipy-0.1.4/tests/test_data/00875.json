    "recipeIngredient": [
        "1 cup water",
        "2 cups granulated sugar",
        "2 cups shelled and roasted peanuts",
        "3/4 cup honey",
        "1/4 cup light corn syrup",
        "2 tablespoons butter",
        "1 teaspoon salt",
        "1/2 cup peanut butter",
        "1/4 teaspoon baking soda"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Prepare a large baking sheet by lining it with aluminum foil that extends over the edges, and spray the foil with nonstick cooking spray."
        },
        {
            "@type": "HowToStep",
            "text": "Combine the sugar and water in a medium saucepan."
        },
        {
            "@type": "HowToStep",
            "text": "Stir until the sugar is entirely moistened, then add the honey, corn syrup and salt."
        },
        {
            "@type": "HowToStep",
            "text": "Cook the candy over medium-high heat until it reaches 225 F on a candy thermometer."
        },
        {
            "@type": "HowToStep",
            "text": "At this point, add the peanuts and stir to combine. Continue to cook, stirring constantly, until the mixture reaches 290 F."
        },
        {
            "@type": "HowToStep",
            "text": "Remove the pan from the heat and stir in the butter, baking soda, and peanut butter."
        },
        {
            "@type": "HowToStep",
            "text": "Mix until well-combined, and then pour onto the prepared pan."
        },
        {
            "@type": "HowToStep",
            "text": "Spread the candy as thin as possible with a spatula or spoon and allow it to set at room temperature."
        },
        {
            "@type": "HowToStep",
            "text": "Once it is entirely cool, break it into small pieces to serve."
        },
        {
            "@type": "HowToStep",
            "text": "Store the brittle in an airtight container or plastic bag at room temperature."
        }
    ],
