    "recipeCategory": [],
    "recipeIngredient": [
        "1 whole star anise pod",
        "1 1/2 ounces (45ml) straight apple brandy (100 proof)",
        "3/4 ounce (20ml) Barolo Chinato",
        "1/2 ounce (15ml) fresh lemon juice from 1 lemon",
        "1/2 ounce (15ml) strong Demerara syrup (see note)",
        "3 dashes Regans&#39; Orange Bitters"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Place star anise pod in a small skillet over medium heat and toast, stirring and flipping frequently, until fragrant, about 1 minute. Transfer to a plate and set aside to cool."
        },
        {
            "@type": "HowToStep",
            "text": "Add apple brandy, Barolo Chinato, lemon juice, strong Demerara syrup, and orange bitters to a cocktail shaker and fill 2/3 full with ice. Shake until well chilled, about 15 seconds. Fine-strain into a cocktail coupe. Garnish with toasted star anise pod."
        }
    ],
