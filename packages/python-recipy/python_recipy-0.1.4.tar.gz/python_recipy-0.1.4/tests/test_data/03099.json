    "recipeIngredient": [
        "6 thick bacon slices",
        "2.25 cups milk",
        "2 tablespoons butter",
        ".5 cup uncooked stone-ground grits",
        "2 teaspoons kosher salt, divided",
        "1 teaspoon black pepper, divided",
        "2.5 cups shredded sharp Cheddar cheese, divided",
        "6 large eggs",
        "2.5 cups half-and-half",
        "1 cup heavy cream",
        ".33 cup sliced green onions"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Preheat oven to 350°F. Cook bacon in a skillet over medium heat until crisp. Remove bacon; drain and crumble. Transfer 2 tsp. bacon drippings to a saucepan."
        },
        {
            "@type": "HowToStep",
            "text": "Bring drippings, milk, and butter to a boil over medium heat. Gradually whisk in grits, 1 tsp. salt, and ½ tsp. pepper; cook, whisking constantly, 15 minutes or until very thick. Remove from heat; let stand 10 minutes. Stir in 1 cup cheese; let stand 10 minutes. Stir in 1 egg; spread in a 9-inch springform pan coated with cooking spray."
        },
        {
            "@type": "HowToStep",
            "text": "Bake at 350°F for 25 minutes or until set and browned. Sprinkle remaining 1 ½ cups cheese over warm grits, spreading to edges. Let stand 15 minutes."
        },
        {
            "@type": "HowToStep",
            "text": "Reduce oven temperature to 325°F. Combine half-and-half, cream, onions, and remaining 5 eggs, 1 tsp. salt, and ½ tsp. pepper. Pour over grits; sprinkle with crumbled bacon. Place pan on a foil-lined baking sheet."
        },
        {
            "@type": "HowToStep",
            "text": "Bake at 325°F for 1 hour and 15 minutes or until lightly browned and just set. Let stand 20 minutes. Run a sharp knife around edges of quiche; remove sides of pan."
        }
    ],
