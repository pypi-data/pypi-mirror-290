    "recipeIngredient": [
        "1/4 cup brown mustard seeds",
        "1/4 cup yellow mustard seeds",
        "1/2 cup dry white wine",
        "1/2 cup white wine vinegar",
        "1/2 teaspoon Kosher salt",
        "1 teaspoon light brown sugar (optional)"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.seriouseats.com/thmb/nknvw5kUhNTb0GqtbY9_-DhCphk=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/__opt__aboutcom__coeus__resources__content_migration__serious_eats__seriouseats.com__recipes__20120401-199820-whole-grain-dijon-step-1-c0af93299c7c4b529f21147110ed6013.jpg"
                }
            ],
            "text": "Place mustard seeds, wine, and vinegar in a small bowl or container, cover, and let soak at room temperature for two days."
        },
        {
            "@type": "HowToStep",
            "image": [
                {
                    "@type": "ImageObject",
                    "url": "https://www.seriouseats.com/thmb/v8aN2oYnUz-yVcj-l4tNVobmwYY=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/__opt__aboutcom__coeus__resources__content_migration__serious_eats__seriouseats.com__recipes__20120401-199820-whole-grain-dijon-step-2-99a5adda595c4418ae0fb1176fa6b491.jpg"
                }
            ],
            "text": "Transfer mustard seeds and liquid to jar of a blender. Add in salt and sugar, if using, and purée until mustard paste forms, but whole seeds still remain. Transfer to an airtight container and let rest in refrigerator for 2 days before use."
        }
    ],
