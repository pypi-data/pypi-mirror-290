    "recipeIngredient": [
        "For the Roast:",
        "1 (4 to 5 pounds) top loin beef roast",
        "1 tablespoon extra-virgin olive oil",
        "1 tablespoon garlic (minced)",
        "1 1/2 teaspoons dried leaf thyme",
        "1 1/2 teaspoons dried leaf sage",
        "1/2 teaspoon rosemary (dried, crumbled)",
        "2 teaspoons sea salt",
        "1 teaspoon freshly ground black pepper",
        "For the Pan Gravy:",
        "Pan drippings",
        "4 tablespoons all-purpose ​ flour",
        "2 to 3 cups beef broth  (or stock, low sodium or unsalted)",
        "Salt and pepper, to taste"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToSection",
            "name": "Make the Roast",
            "itemListElement": [
                {
                    "@type": "HowToStep",
                    "image": [
                        {
                            "@type": "ImageObject",
                            "url": "https://www.thespruceeats.com/thmb/DzV_91E_mG2ALy2ORbgOTfWYrm4=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/herb-crusted-beef-top-loin-roast-3058703-step-01-6adcda2b9fc34fa4a685b0ec05febbaa.jpg"
                        }
                    ],
                    "text": "Gather the roast ingredients."
                },
                {
                    "@type": "HowToStep",
                    "image": [
                        {
                            "@type": "ImageObject",
                            "url": "https://www.thespruceeats.com/thmb/FDGYpAFN0o05YuXTePBgO_LV0fo=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/herb-crusted-beef-top-loin-roast-3058703-step-02-12aabc96e4d746038e484d6b1d4549fd.jpg"
                        }
                    ],
                    "text": "Preheat oven to 450 F and place the roast, fat-side up, on a rack in a roasting pan."
                },
                {
                    "@type": "HowToStep",
                    "image": [
                        {
                            "@type": "ImageObject",
                            "url": "https://www.thespruceeats.com/thmb/IJwOELl_8QHodeJNXCmVHop6oFo=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/herb-crusted-beef-top-loin-roast-3058703-step-03-e3aac39df42f481caa9a39f7a7ac0732.jpg"
                        }
                    ],
                    "text": "Combine the olive oil, garlic, thyme, sage, rosemary, sea salt, and pepper; stir to blend. Rub all over the roast."
                },
                {
                    "@type": "HowToStep",
                    "image": [
                        {
                            "@type": "ImageObject",
                            "url": "https://www.thespruceeats.com/thmb/1ECd75E-dB_YfmE596uc9VOyy0Q=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/herb-crusted-beef-top-loin-roast-3058703-step-04-b4814628ce594c35820b62f4b5a256fa.jpg"
                        }
                    ],
                    "text": "Place in oven and roast the beef for 15 minutes."
                },
                {
                    "@type": "HowToStep",
                    "image": [
                        {
                            "@type": "ImageObject",
                            "url": "https://www.thespruceeats.com/thmb/AX6EGVljSmKxzF6q9Eo60tmkF_g=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/herb-crusted-beef-top-loin-roast-3058703-step-05-a1ca593398af4a4c89cd337ca5f67429.jpg"
                        }
                    ],
                    "text": "Reduce oven heat to 350 F, and roast for about 35 to 45 minutes longer or to 130 F to 140 F (for medium-rare) on an instant-read thermometer or temperature probe inserted into the center of the thickest part of the roast."
                },
                {
                    "@type": "HowToStep",
                    "image": [
                        {
                            "@type": "ImageObject",
                            "url": "https://www.thespruceeats.com/thmb/e17qBz0_jOVr_ILjqWW0kBrBJgs=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/herb-crusted-beef-top-loin-roast-3058703-step-06-8c1e7c34ee624cf79a915bf649e2d826.jpg"
                        }
                    ],
                    "text": "Let the roast rest for 15 minutes before slicing."
                },
                {
                    "@type": "HowToStep",
                    "image": [
                        {
                            "@type": "ImageObject",
                            "url": "https://www.thespruceeats.com/thmb/U65m5-R1pdD-TiX99pDK-jPKm1s=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/herb-crusted-beef-top-loin-roast-3058703-step-07-1ef4fb72cc73456c9b6d48213481559e.jpg"
                        }
                    ],
                    "text": "Slice and arrange the beef on a platter and serve with the pan gravy."
                }
            ]
        },
