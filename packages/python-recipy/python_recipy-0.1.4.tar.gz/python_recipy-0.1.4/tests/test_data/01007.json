    "recipeIngredient": [
        "1 1/2 cups diced Fuji apple (from 1 [8- to 9-oz.] apple)",
        "1/2 cup granulated sugar",
        "2 cups all-purpose flour",
        "1/3 cup packed light brown sugar",
        "1 tablespoon baking powder",
        "1/2 teaspoon salt",
        "1/2 teaspoon ground cinnamon",
        "1/2 cup whole milk",
        "1/2 cup salted butter, melted and cooled",
        "1 teaspoon vanilla extract",
        "2 large eggs, lightly beaten"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Prepare oven and muffin pan: Preheat oven to 400Â°F. Lightly grease a 12- cup muffin pan with cooking spray or line with baking liners."
        },
        {
            "@type": "HowToStep",
            "text": "Combine apple and sugar: Place apple and granulated sugar in a medium bowl; toss to coat, and let stand 10 minutes."
        },
        {
            "@type": "HowToStep",
            "text": "Combine dry ingredients: Meanwhile, whisk together flour, brown sugar, baking powder, salt, and cinnamon in a large bowl."
        },
        {
            "@type": "HowToStep",
            "text": "Make muffin batter: Stir milk, melted butter, vanilla, and eggs into apple mixture; add to flour mixture, stirring until just combined."
        },
        {
            "@type": "HowToStep",
            "text": "Add batter to muffin cups: Divide batter evenly among prepared muffin cups."
        },
        {
            "@type": "HowToStep",
            "text": "Bake muffins: Bake in preheated oven until a wooden pick inserted in center comes out clean, 18 to 19 minutes."
        },
        {
            "@type": "HowToStep",
            "text": "Cool muffins: Cool in pan 5 minutes; remove muffins to a wire rack, and let cool 15 minutes to serve warm. Or let cool to room temperature."
        }
    ],
