    "recipeIngredient": [
        "1/2 cup plain cooked rice",
        "3 eggs (beaten)",
        "1/2 cup sugar",
        "1/4 teaspoon salt",
        "1 teaspoon vanilla extract",
        "1 teaspoon finely grated lemon zest",
        "1/2 cup raisins",
        "3 1/2 cups milk",
        "1 pinch of ground nutmeg (freshly ground is preferable)",
        "Optional: whipped cream or whipped topping"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Gather the ingredients. Preheat the oven to 300 F and lightly butter a shallow 1 1/2- to 2-quart baking dish."
        },
        {
            "@type": "HowToStep",
            "text": "In a large bowl, add all of the ingredients except the nutmeg and stir until combined."
        },
        {
            "@type": "HowToStep",
            "text": "Pour the mixture into the prepared baking dish and sprinkle with the nutmeg."
        },
        {
            "@type": "HowToStep",
            "text": "Place the baking dish in a larger pan and pour in hot water to a depth of about 1 inch. Place in theÂ oven and bake for about 1 1/2 hours, or until set."
        },
        {
            "@type": "HowToStep",
            "text": "The rice pudding is ready when a clean knife inserted into the center comes out with nothing clinging to it."
        },
        {
            "@type": "HowToStep",
            "text": "Serve the pudding warm, or once cooled, place in the refrigerator to chill and serve cold. Add a dollop of whipped cream or whipped topping, if desired."
        },
        {
            "@type": "HowToStep",
            "text": "Enjoy."
        }
    ],
