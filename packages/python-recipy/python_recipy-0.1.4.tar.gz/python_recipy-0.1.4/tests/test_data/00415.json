    "recipeIngredient": [
        "1 medium ripe banana",
        "1 cup of fresh, canned, or frozen pineapple",
        "3 large handfuls of fresh spinach (washed)",
        "1 cup of plain Greek yogurt",
        "6 oz. water"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Combine the ingredients: Into a blender add the banana, pineapple, spinach, greek yogurt, and water. Blend until smooth. Enjoy!"
        }
    ],
