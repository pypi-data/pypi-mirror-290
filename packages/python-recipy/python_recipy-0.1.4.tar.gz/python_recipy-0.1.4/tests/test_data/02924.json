    "recipeIngredient": [
        "1 tbsp oil",
        "1 onion , chopped",
        "1 large garlic clove , crushed",
        "1 tsp turmeric",
        "1 tsp garam masala",
        "1 tsp chilli flakes",
        "400ml can coconut milk",
        "390g pack fish pie mix",
        "200g frozen peas",
        "1 lime , cut into wedges",
        "yogurt and rice (or cauliflower rice), to serve"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Heat the oil in a large saucepan over a medium heat, add the onion and a big pinch of salt. Gently fry until the onion is translucent, so around 10 mins, then add the garlic and spices. Stir and cook for another minute, adding a splash of water to prevent them sticking. Tip in the coconut milk and stir well, then simmer for 10 mins."
        },
        {
            "@type": "HowToStep",
            "text": "Tip the fish pie mix and the frozen peas into the pan and cook until the peas are bright green and the fish is starting the flake, so around 3 mins. Season and add lime juice to taste. Ladle into bowls and serve with yogurt and rice."
        }
    ],
    "recipeYield": 4,
    "suitableForDiet": "https://schema.org/GlutenFreeDiet",
