    "recipeIngredient": [
        "0.5 cup fat from turkey drippings",
        "0.5 cup all-purpose flour",
        "1 cup liquid from turkey drippings",
        "2 cups turkey stock",
        "ground black pepper to taste"
    ],
    "recipeInstructions": [
        {
            "@type": "HowToStep",
            "text": "Heat fat from turkey drippings in a saucepan over medium-low heat until liquefied, 2 to 3 minutes. Whisk flour into turkey fat until golden, about 5 minutes."
        },
        {
            "@type": "HowToStep",
            "text": "Whisk liquid from turkey drippings and turkey stock into fat-flour mixture; increase heat to medium and cook, whisking continuously, until gravy is smooth and desired consistency, 5 to 10 minutes. Season gravy with pepper."
        }
    ],
